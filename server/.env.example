NODE_ENV=production
SERVER_HOST=0.0.0.0
SERVER_PORT=3000
LOG_LEVEL=info
TRUST_PROXY=false

DEEPSEEK_API_KEY=sk-xxxx
DEEPSEEK_BASE_URL=https://api.deepseek.com

# Comma-separated CORS allowlist. Use "*" to allow all (not recommended for production).
# Supports wildcard patterns like:
# - https://*.vercel.app
# - *.your-domain.com
CORS_ORIGIN=https://your-web-domain.com,https://*.vercel.app
CORS_CREDENTIALS=false
CORS_MAX_AGE=86400

# Optional: provide a stable RSA key pair for multi-instance deployments (PM2 cluster / multiple servers).
# If not set, the server will generate an ephemeral key pair on startup.
DEEPSEEK_RSA_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"
# Optional. If omitted, public key will be derived from private key.
DEEPSEEK_RSA_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----"
