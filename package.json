{
  "name": "resume-forge",
  "version": "1.0.0",
  "description": "Resume builder monorepo with web frontend and backend server",
  "private": true,
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:web": "pnpm --filter @resume/web dev",
    "dev:server": "pnpm --filter @resume/server dev",
    "build": "pnpm -r build",
    "build:web": "pnpm --filter @resume/types build && pnpm --filter @resume/web build",
    "build:server": "pnpm --filter @resume/types build && pnpm --filter @resume/server build",
    "deploy:server": "pnpm --filter @resume/server deploy",
    "logs:server": "pnpm --filter @resume/server pm2:logs",
    "stop:server": "pnpm --filter @resume/server pm2:stop",
    "lint": "pnpm -r lint",
    "lint:check": "pnpm -r lint:check",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@resume/eslint-config": "workspace:*",
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript-eslint": "^8.54.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write"
    ]
  }
}
